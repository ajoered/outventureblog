<nav class="nav-extended primary-blue">
	<div class="nav-background">
		<div class="pattern active" style="background-image: url('https://www.alpin-ism.com/assets/lead/_leadImage/ISM-Alpine-1-1400x300.jpg');"></div>
	</div>
	<div class="nav-wrapper container">
		<div class="nav-header center">
			<h1>The Outventure Blog</h1>
			<div class="tagline">The Outdoor Recreation Community</div>
		</div>
	</div>
	<!-- Fixed Masonry Filters -->
	<div class="categories-wrapper secondary-blue">
		<div class="categories-container">
			<ul class="categories container">
				<li class="active"><a href="#all">All</a></li>
				<li><a href="#overhead">Overhead</a></li>
				<li><a href="#sintel">Sintel</a></li>
			</ul>
		</div>
	</div>
</nav>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-9">
			<h4 class="text-weight-normal">Showing {{ data.posts.results.length}} post.</h4>
			<div class="blog">
				{{# each data.posts.results}}
				<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post">
					<h2><a href="{{postUrl slug}}">{{{title}}}</a></h2>
					<p class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}
							{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</p>
					{{#if image}}<img src="{{{cloudinaryUrl image width=160 height=160 crop='fit' }}}" class="img pull-right">{{/if}}
					<p>{{{content.brief}}}</p>
					{{#if content.extended}}<p class="read-more"><a href="{{postUrl slug}}">Read more...</a></p>{{/if}}
				</div>
				{{/each}}
			</div>
		</div>
		<div class="col-sm-4 col-md-3">
			<h2>Categories</h2>
			<div style="margin-top: 70px;" class="list-group">
				<a href="/blog" class="active list-group-item">All Categories</a>
				{{# each data.categories }}
				<a href="{{categoryUrl key}}" class="false list-group-item">{{name}}</a>
				{{/each}}
			</div>
		</div>
	</div>
	{{>pagination}}
</div>
